---
interface Props {
    title?: string;
}

const { title } = Astro.props;
const web_title = "FH Kalender" + (title ? " - " + title : "");

const nav = [
    {
        title: "Elektrotechnik und Informatik",
        url: "/eletrotechnik-informatik",
    },
    {
        title: "Maschinenwesen",
        url: "/maschinen",
    },
    {
        title: "Medien / Bauwesen",
        url: "/medien-bau",
    },
    {
        title: "Soziale Arbeit und Gesundheit",
        url: "/sozial-arbeit-gesundheit",
    },
    {
        title: "Wirtschaft",
        url: "/wirtschaft",
    },
];
---

<header class="container">
    <a href="/">
        <h1>{web_title}</h1>
    </a>

    <div class="grid">
        {
            nav.map((item) => (
                <a
                    href={item.url}
                    role="button"
                    class="outline contrast"
                    style="display: grid; place-items: center;"
                >
                    {item.title}
                </a>
            ))
        }
    </div>
</header>
